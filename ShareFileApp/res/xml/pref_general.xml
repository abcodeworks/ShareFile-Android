<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_enable_share"
        android:title="@string/pref_enable_share_title"
        android:summary="@string/pref_enable_share_summary" />
    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_enable_share_and_view"
        android:title="@string/pref_enable_share_and_view_title"
        android:summary="@string/pref_enable_share_and_view_summary" />
    
    <Preference
        android:key="homepage"
        android:title="@string/pref_homepage_title" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_homepage_url" >
        </intent>
    </Preference>

    <Preference
        android:key="sourcecode"
        android:title="@string/pref_sourcecode_title" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_sourcecode_url" >
        </intent>
    </Preference>
    
    <Preference
        android:key="license"
        android:title="@string/pref_license_title"
        android:summary="@string/pref_license_summary" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_license_url" >
        </intent>
    </Preference>
</PreferenceScreen>